<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        tools:context=".LectureInfoActivity">
        <TextView
            android:id="@+id/lecture_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="과목명"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/lecture_code_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="과목코드"
            android:textColor="@color/gray"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/lecture_name_text"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/lecture_classification_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="과목구분"
            android:textSize="25sp"
            android:textColor="@color/blue"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/lecture_code_text"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/lecture_professor_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="교수명"
            android:textSize="30sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/lecture_classification_text"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/lecture_grade_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="학점"
            android:textSize="25sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/lecture_professor_text"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/lecture_rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="평점"
            android:textSize="25sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/lecture_grade_text"
            app:layout_constraintLeft_toLeftOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>